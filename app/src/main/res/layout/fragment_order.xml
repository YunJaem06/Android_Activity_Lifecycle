<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="매장 선택"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@id/iv_order_find"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/iv_order_find" />

            <ImageView
                android:id="@+id/iv_order_find"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/rounded_magnifying_glass"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.appcompat.widget.Toolbar>

        <TableLayout
            android:id="@+id/tl_order_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tool_order" />

        <TextView
            android:id="@+id/tv_order_my_surroundings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_order_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="내 주변에 16개의 매장이 있습니다." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_order_my_surroundings"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_order_top_guro1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:text="구로고척시장점"/>

                <TextView
                    android:id="@+id/tv_order_mid_guro1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_top_guro1"
                    app:layout_constraintStart_toStartOf="@id/tv_order_top_guro1"
                    android:layout_marginTop="5dp"
                    android:text="서울특별시 구로구 경인로47길 107, 1층(고척동)"/>

                <TextView
                    android:id="@+id/tv_order_bottom_guro1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="220m"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_mid_guro1"
                    app:layout_constraintStart_toStartOf="@id/tv_order_top_guro1"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff0000"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="@id/tv_order_top_guro1"
                    app:layout_constraintBottom_toBottomOf="@id/tv_order_bottom_guro1"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/img_meag_coffee1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_order_top_guro2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:text="구로고척점"/>

                <TextView
                    android:id="@+id/tv_order_mid_guro2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_top_guro2"
                    app:layout_constraintStart_toStartOf="@id/tv_order_top_guro2"
                    android:layout_marginTop="5dp"
                    android:text="서울특별시 구로구 고척로 239"/>

                <TextView
                    android:id="@+id/tv_order_bottom_guro2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="340m"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_mid_guro2"
                    app:layout_constraintStart_toStartOf="@id/tv_order_top_guro2"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff0000"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="@id/tv_order_top_guro2"
                    app:layout_constraintBottom_toBottomOf="@id/tv_order_bottom_guro2"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/img_meag_coffee1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_order_top_guro3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:text="목동우성점"/>

                <TextView
                    android:id="@+id/tv_order_mid_guro3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_top_guro3"
                    app:layout_constraintStart_toStartOf="@id/tv_order_top_guro3"
                    android:layout_marginTop="5dp"
                    android:text="서울특별시 양천구 목동남로4길 2"/>

                <TextView
                    android:id="@+id/tv_order_bottom_guro3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="357m"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_mid_guro3"
                    app:layout_constraintStart_toStartOf="@id/tv_order_top_guro3"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff0000"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="@id/tv_order_top_guro3"
                    app:layout_constraintBottom_toBottomOf="@id/tv_order_bottom_guro3"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/img_meag_coffee1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/tv_order_top_guro4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:text="동양미래대학점"/>

                <TextView
                    android:id="@+id/tv_order_mid_guro4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_top_guro4"
                    app:layout_constraintStart_toStartOf="@id/tv_order_top_guro4"
                    android:layout_marginTop="5dp"
                    android:text="서울특별시 구로구 고척동 52-198(경인로 47길 26)"/>

                <TextView
                    android:id="@+id/tv_order_bottom_guro4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="340m"
                    app:layout_constraintTop_toBottomOf="@id/tv_order_mid_guro4"
                    app:layout_constraintStart_toStartOf="@id/tv_order_top_guro4"
                    android:textSize="16sp"
                    android:layout_marginTop="5dp"
                    android:textColor="#ff0000"/>

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:layout_constraintTop_toTopOf="@id/tv_order_top_guro4"
                    app:layout_constraintBottom_toBottomOf="@id/tv_order_bottom_guro4"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/img_meag_coffee1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>